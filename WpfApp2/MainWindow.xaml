<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid RenderTransformOrigin="0.5,0.5">
        <Button x:Name="btn_Add" Content="Add" HorizontalAlignment="Left" Margin="376,241,0,0" VerticalAlignment="Top" Click="btn_Add_Click"/>
        <Button x:Name="btn_Remove" Content="Remove" HorizontalAlignment="Left" Margin="420,241,0,0" VerticalAlignment="Top" Click="btn_Remove_Click"/>
        <TextBlock x:Name="tb_Calculator" HorizontalAlignment="Left" Margin="389,283,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>
        <Button x:Name="btn_ChangeInput" Content="Turn Kilometer To Mile" HorizontalAlignment="Left" Margin="179,0,0,0" VerticalAlignment="Center" Click="btn_ChangeInput_Click"/>
        <TextBox x:Name="input_ChangeKilometers" HorizontalAlignment="Left" Margin="179,184,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBlock x:Name="tb_input" HorizontalAlignment="Left" Margin="214,232,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
